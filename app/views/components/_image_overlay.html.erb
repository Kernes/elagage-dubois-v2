<%# 
  Composant image avec overlay et texte
  Usage: 
  <%= render "components/image_overlay", 
      image: "url",
      alt: "Description",
      title: "Titre",
      subtitle: "Sous-titre",
      aspect: "4/5" %>
%>
<% image ||= "" %>
<% alt ||= "" %>
<% title ||= "" %>
<% subtitle ||= "" %>
<% aspect ||= "4/5" %>
<% rounded ||= "2xl" %>

<div class="overflow-hidden relative rounded-<%= rounded %> shadow-2xl aspect-[<%= aspect %>] group">
  <img src="<%= image %>" alt="<%= alt %>" class="object-cover w-full h-full transition-transform group-hover:scale-110">
  <div class="absolute inset-0 bg-gradient-to-t to-transparent from-black/60"></div>
  <% if title.present? || subtitle.present? %>
    <div class="absolute right-4 bottom-4 left-4">
      <% if title.present? %>
        <h3 class="text-lg font-bold text-white"><%= title %></h3>
      <% end %>
      <% if subtitle.present? %>
        <p class="text-sm text-white/90"><%= subtitle %></p>
      <% end %>
    </div>
  <% end %>
</div>

