<%# 
  Composant carte de service
  Usage: 
  <%= render "components/service_card", 
      title: "Ã‰lagage", 
      description: "Description...", 
      icon: "svg_path",
      icon_color: "green-700",
      bg_gradient: "from-green-50 to-green-100",
      features: ["Feature 1", "Feature 2"],
      image: "url" %>
%>
<% title ||= "" %>
<% description ||= "" %>
<% icon ||= "" %>
<% icon_color ||= "green-700" %>
<% bg_gradient ||= "from-green-50 to-green-100" %>
<% features ||= [] %>
<% image ||= nil %>

<div class="overflow-hidden relative p-8 bg-gradient-to-br <%= bg_gradient %> rounded-2xl shadow-lg transition-shadow group hover:shadow-xl">
  <% if image.present? %>
    <div class="absolute inset-0 opacity-10">
      <img src="<%= image %>" alt="" class="object-cover w-full h-full">
    </div>
  <% end %>
  <div class="relative">
    <% if icon.present? %>
      <div class="flex justify-center items-center mb-6 w-16 h-16 bg-<%= icon_color %> rounded-full">
        <%= raw icon %>
      </div>
    <% end %>
    <% if title.present? %>
      <h3 class="mb-4 text-2xl font-bold text-gray-900"><%= title %></h3>
    <% end %>
    <% if description.present? %>
      <p class="mb-6 text-gray-700"><%= description %></p>
    <% end %>
    <% if features.any? %>
      <ul class="space-y-2 text-sm text-gray-600">
        <% features.each do |feature| %>
          <li class="flex items-start">
            <svg class="flex-shrink-0 mr-2 w-5 h-5 text-<%= icon_color %>" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <%= feature %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

