<%# 
  Composant section CTA complète
  Usage: 
  <%= render "components/cta_section", 
      title: "Besoin d'un service ?",
      description: "Description...",
      bg_gradient: "from-green-700 via-green-800 to-green-900",
      badge_text: "Réponse rapide",
      show_stats: true %>
%>
<% title ||= "Besoin d'un Service Professionnel ?" %>
<% description ||= "Expert en élagage et abattage d'arbres dans le Val d'Oise (95). Devis gratuit sous 24h, intervention rapide 7j/7. Élagage sécurisé, abattage professionnel, dessouchage mécanique." %>
<% bg_gradient ||= "from-green-700 via-green-800 to-green-900" %>
<% badge_text ||= nil %>
<% show_stats ||= false %>
<% image_bg ||= nil %>

<section class="overflow-hidden relative py-24 bg-gradient-to-br <%= bg_gradient %>">
  <% if image_bg.present? %>
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: url('<%= image_bg %>'); background-size: cover; background-position: center;"></div>
    </div>
  <% end %>
  <div class="absolute inset-0 bg-black/25"></div>
  
  <div class="relative z-10 px-6 mx-auto max-w-7xl lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <% if badge_text.present? %>
        <div class="inline-flex justify-center items-center px-4 py-2 mb-6 rounded-full border backdrop-blur-sm bg-amber-400/20 border-amber-200/30">
          <svg class="mr-2 w-5 h-5 text-amber-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="text-sm font-semibold text-amber-300"><%= badge_text %></span>
        </div>
      <% end %>
      
      <h2 class="text-4xl font-bold tracking-tight text-white sm:text-5xl"><%= title %></h2>
      <p class="mt-6 text-xl leading-relaxed text-white"><%= description %></p>
      
      <div class="flex flex-col gap-4 mt-10 sm:flex-row sm:justify-center">
        <%= render "components/button_cta", variant: "primary", size: "lg" %>
        <%= render "components/button_phone", variant: "primary", size: "lg" %>
      </div>
      
      <% if show_stats %>
        <div class="grid grid-cols-3 gap-8 mx-auto mt-12 max-w-md">
          <div class="text-center">
            <div class="text-2xl font-bold text-amber-300">24h</div>
            <div class="mt-1 text-sm text-white">Réponse rapide</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-amber-300">100%</div>
            <div class="mt-1 text-sm text-white">Gratuit</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-amber-300">7j/7</div>
            <div class="mt-1 text-sm text-white">Disponible</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

