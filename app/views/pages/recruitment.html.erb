            <%= form.label :phone, "Téléphone <span class='text-red-500'>*</span>".html_safe, class: "block mb-2 text-sm font-semibold text-gray-900" %>
            <%= form.telephone_field :phone, required: true, class: "block px-3 py-2 w-full rounded-md border border-gray-300 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500", placeholder: "06 20 47 99 66" %>
          </div>

          <!-- CV -->
          <div>
            <%= form.label :cv_file, "CV (PDF, DOC, DOCX) <span class='text-red-500'>*</span>".html_safe, class: "block mb-2 text-sm font-semibold text-gray-900" %>
