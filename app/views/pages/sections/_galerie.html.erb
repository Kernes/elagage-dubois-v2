<!-- Galerie Photos -->
<section id="galerie" class="py-24 bg-gradient-to-b from-white to-green-50/40">
  <div class="px-6 mx-auto max-w-7xl lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">Nos Réalisations</h2>
      <p class="mt-4 text-lg text-gray-600">Découvrez nos interventions en images</p>
    </div>
    
    <div class="grid gap-4 mt-16 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Image 1 - Élagage -->
      <div class="overflow-hidden relative rounded-lg group aspect-square">
        <% galerie_img1 = local_image_srcset("/images/homepage/5_1 Nos réalisation-élagage sanitaire d'un cèdre bleu", { mobile: 400, tablet: 600, desktop: 800 }) %>
        <picture>
          <source srcset="<%= galerie_img1[:avif_srcset] %>" sizes="<%= galerie_img1[:sizes] %>" type="image/avif">
          <source srcset="<%= galerie_img1[:webp_srcset] %>" sizes="<%= galerie_img1[:sizes] %>" type="image/webp">
          <img src="<%= galerie_img1[:src] %>" 
               srcset="<%= galerie_img1[:webp_srcset] %>"
               sizes="<%= galerie_img1[:sizes] %>"
               alt="Élagage sanitaire d'un cèdre bleu" 
               class="object-cover w-full h-full"
               loading="lazy">
        </picture>
        <div class="absolute inset-0 bg-gradient-to-t to-transparent opacity-0 transition-opacity pointer-events-none from-black/60 group-hover:opacity-100">
          <div class="absolute right-4 bottom-4 left-4">
            <p class="font-semibold text-white">Élagage sanitaire d'un cèdre bleu</p>
          </div>
        </div>
      </div>
      
      <!-- Image 2 - Abattage -->
      <div class="overflow-hidden relative rounded-lg group aspect-square">
        <% galerie_img2 = local_image_srcset("/images/homepage/5_2 Nos réalisation-abattage d'un sapin", { mobile: 400, tablet: 600, desktop: 800 }) %>
        <picture>
          <source srcset="<%= galerie_img2[:avif_srcset] %>" sizes="<%= galerie_img2[:sizes] %>" type="image/avif">
          <source srcset="<%= galerie_img2[:webp_srcset] %>" sizes="<%= galerie_img2[:sizes] %>" type="image/webp">
          <img src="<%= galerie_img2[:src] %>" 
               srcset="<%= galerie_img2[:webp_srcset] %>"
               sizes="<%= galerie_img2[:sizes] %>"
               alt="Abattage d'un sapin" 
               class="object-cover w-full h-full"
               loading="lazy">
        </picture>
        <div class="absolute inset-0 bg-gradient-to-t to-transparent opacity-0 transition-opacity pointer-events-none from-black/60 group-hover:opacity-100">
          <div class="absolute right-4 bottom-4 left-4">
            <p class="font-semibold text-white">Abattage d'un sapin</p>
          </div>
        </div>
      </div>
      
      <!-- Image 3 - Dessouchage -->
      <div class="overflow-hidden relative rounded-lg group aspect-square">
        <% galerie_img3 = local_image_srcset("/images/homepage/5_3 Nos realisation-dessouchage a la mini pelle", { mobile: 400, tablet: 600, desktop: 800 }) %>
        <picture>
          <source srcset="<%= galerie_img3[:avif_srcset] %>" sizes="<%= galerie_img3[:sizes] %>" type="image/avif">
          <source srcset="<%= galerie_img3[:webp_srcset] %>" sizes="<%= galerie_img3[:sizes] %>" type="image/webp">
          <img src="<%= galerie_img3[:src] %>" 
               srcset="<%= galerie_img3[:webp_srcset] %>"
               sizes="<%= galerie_img3[:sizes] %>"
               alt="Dessouchage à la mini pelle" 
               class="object-cover w-full h-full"
               loading="lazy">
        </picture>
        <div class="absolute inset-0 bg-gradient-to-t to-transparent opacity-0 transition-opacity pointer-events-none from-black/60 group-hover:opacity-100">
          <div class="absolute right-4 bottom-4 left-4">
            <p class="font-semibold text-white">Dessouchage à la mini pelle</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


