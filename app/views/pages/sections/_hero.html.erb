<!-- Hero Section -->
<section class="overflow-hidden relative pt-32 pb-24 min-h-[90vh] flex items-center bg-gray-900 lg:py-24 lg:min-h-[90vh]">
  <!-- Image de fond principale -->
  <div class="absolute inset-0">
    <img src="https://images.unsplash.com/photo-1516214104703-d870798883c5?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" alt="Élagage professionnel" class="object-cover w-full h-full">
    <div class="absolute inset-0 bg-gradient-to-r to-transparent from-green-900/90 via-green-800/80"></div>
    <div class="absolute inset-0 bg-black/20"></div>
  </div>

  <div class="relative z-10 px-6 mx-auto w-full max-w-7xl lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
      <!-- Contenu texte -->
      <div class="text-center lg:text-left">
        <div class="inline-flex items-center px-4 py-2 mb-6 rounded-full border backdrop-blur-sm bg-amber-400/20 border-amber-200/30">
          <svg class="mr-2 w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span class="text-sm font-semibold text-amber-400">Assuré tous travaux • <%= company_years_experience %>+ ans d'expérience</span>
        </div>
        
        <h1 class="text-5xl font-bold tracking-tight text-white sm:text-6xl lg:text-7xl">
          Votre Expert en <span class="text-amber-400">Élagage</span><br />
          <span class="text-amber-400">Abattage</span> & <span class="text-amber-400">Dessouchage</span>
        </h1>
        
        <p class="mt-6 text-xl leading-relaxed text-white/90 sm:text-2xl">
          Passionnés par les arbres depuis plus de <%= company_years_experience %> ans, nous mettons notre expertise au service de vos projets. Des interventions réalisées avec professionnalisme et respect de la nature.
        </p>
        
        <!-- Statistiques -->
        <div class="grid grid-cols-3 gap-6 mt-10 max-w-md">
          <div class="text-center lg:text-left">
            <div class="text-4xl font-bold text-amber-400"><%= company_years_experience %>+</div>
            <div class="mt-1 text-sm font-medium text-white/80">Années d'expérience</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-4xl font-bold text-amber-400"><%= company_satisfied_clients %>+</div>
            <div class="mt-1 text-sm font-medium text-white/80">Clients satisfaits</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-4xl font-bold text-amber-400"><%= company_average_rating %>/5</div>
            <div class="mt-1 text-sm font-medium text-white/80">Note moyenne</div>
          </div>
        </div>
        
        <div class="flex flex-col gap-4 mt-10 sm:flex-row sm:justify-center lg:justify-start">
          <a href="/devis" class="inline-flex justify-center items-center px-8 py-4 text-lg font-semibold text-green-900 bg-amber-400 rounded-lg shadow-xl transition-all hover:bg-amber-300 hover:scale-105">
            Demander un devis gratuit
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a href="tel:<%= company_phone_formatted %>" class="inline-flex justify-center items-center px-8 py-4 text-lg font-semibold text-white rounded-lg border-2 backdrop-blur-md transition-all border-white/30 bg-white/10 hover:bg-white/20 hover:border-white/50">
            <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
                <%= company_phone %>
          </a>
        </div>
      </div>

      <!-- Galerie d'images - Style mur de photo -->
      <div class="hidden relative grid-cols-2 gap-6 lg:grid">
        <!-- Photo 1 - Élagage -->
        <div class="relative transform rotate-[-5deg] transition-transform hover:rotate-0 hover:scale-105 hover:z-10" style="transform-origin: center;">
          <div class="bg-white p-1 shadow-[0_10px_30px_rgba(0,0,0,0.3)]">
            <div class="overflow-hidden relative aspect-[4/5]">
              <img src="https://images.unsplash.com/photo-1516214104703-d870798883c5?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Élagage professionnel" class="object-cover w-full h-full">
              <div class="absolute inset-0 bg-gradient-to-t to-transparent from-black/60"></div>
              <div class="absolute right-4 bottom-4 left-4">
                <h3 class="text-lg font-bold text-white">Élagage</h3>
                <p class="text-sm text-white/90">Taille et entretien professionnel</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Photo 2 - Abattage -->
        <div class="relative transform rotate-[8deg] mt-8 transition-transform hover:rotate-0 hover:scale-105 hover:z-10" style="transform-origin: center;">
          <div class="bg-white p-1 shadow-[0_10px_30px_rgba(0,0,0,0.3)]">
            <div class="overflow-hidden relative aspect-[4/5]">
              <img src="https://images.unsplash.com/photo-1473448912268-2022ce9509d8?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Abattage sécurisé" class="object-cover w-full h-full">
              <div class="absolute inset-0 bg-gradient-to-t to-transparent from-black/60"></div>
              <div class="absolute right-4 bottom-4 left-4">
                <h3 class="text-lg font-bold text-white">Abattage</h3>
                <p class="text-sm text-white/90">Interventions sécurisées</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Photo 3 - Dessouchage -->
        <div class="relative transform rotate-[6deg] -mt-8 transition-transform hover:rotate-0 hover:scale-105 hover:z-10" style="transform-origin: center;">
          <div class="bg-white p-1 shadow-[0_10px_30px_rgba(0,0,0,0.3)]">
            <div class="overflow-hidden relative aspect-[4/5]">
              <img src="https://images.unsplash.com/photo-1441974231531-c6227db76b6e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Dessouchage" class="object-cover w-full h-full">
              <div class="absolute inset-0 bg-gradient-to-t to-transparent from-black/60"></div>
              <div class="absolute right-4 bottom-4 left-4">
                <h3 class="text-lg font-bold text-white">Dessouchage</h3>
                <p class="text-sm text-white/90">Élimination complète</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Photo 4 - Entretien -->
        <div class="relative transform rotate-[-7deg] transition-transform hover:rotate-0 hover:scale-105 hover:z-10" style="transform-origin: center;">
          <div class="bg-white p-1 shadow-[0_10px_30px_rgba(0,0,0,0.3)]">
            <div class="overflow-hidden relative aspect-[4/5]">
              <img src="https://images.unsplash.com/photo-1516214104703-d870798883c5?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Entretien paysager" class="object-cover w-full h-full">
              <div class="absolute inset-0 bg-gradient-to-t to-transparent from-black/60"></div>
              <div class="absolute right-4 bottom-4 left-4">
                <h3 class="text-lg font-bold text-white">Entretien</h3>
                <p class="text-sm text-white/90">Services d'entretien complet</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

